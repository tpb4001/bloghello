	function fe_scroll(top,tsid,tbotm,speed){
	$body = (window.opera) ? (document.compatMode == "CSS1Compat" ? $('html') : $('body')) : $('html,body');
	if(top){$body.animate({scrollTop:0}, speed);
	return false;
	}
	if(tsid){$body.animate({scrollTop:$("#"+tsid).offset().top}, speed);
	return false;
	}
	if(tbotm){
	var tbot=$(document).height()-$(window).height();
	if(tbot<0){tbot=0}
	$body.animate({scrollTop:tbot}, speed);
	return false;
	}
	}

	//fe_scroll(true,null,null,1000); /*跳到页面头部*/
	//fe_scroll(null,null,true,1000);/*跳到页面底部*/
	//fe_scroll(null,"asdasd",null,1000);	/*跳到指定ID的元素头部*/	   
			   
			   

	/*主题站首页讨论区图片压缩*/
	if($(".dy_tfcli").length>0){	
	$(".dy_tfcli img").each(function(){
	var tisite_pw=$(this).attr("width");
	var tisite_ph=$(this).attr("height");
	var tisite_pmax=80;
	if(tisite_pw>tisite_ph){
		$(this).attr("height",tisite_pmax);
		$(this).attr("width",tisite_pw*tisite_pmax/tisite_ph);
		}
	if(tisite_pw<=tisite_ph){
		$(this).attr("width",tisite_pmax);
		$(this).attr("height",tisite_ph*tisite_pmax/tisite_pw);	
		}								 
	})
	}   
			   
			   
			   
			   
