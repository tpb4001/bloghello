XB.namespace('bbs_forum');
//赵晓飞js查看全部众筹的记录
$(function() {
	var alreadyNum= $("#alreadyNum").val();
	var commNum= $("#commNum").val();
	var size=600/commNum;
	var sizewidth;
	if(alreadyNum*size>600){
		sizewidth=600;
	}else{
		sizewidth=size*alreadyNum;
	}
	$(".bbs_mpbar").css("width", sizewidth);
	});
function showsendMsg(){
	var crowdfundingrecord= $("#crowdfundingrecord").val();
    var data=crowdfundingrecord.substring(0,crowdfundingrecord.length-1);
	var dataobject= $.parseJSON(data);
	var html2='';
	html2+='<div class="popwin_con"><div class="bbs_dpop2"><div class="bbs_dpn"><div class="bbs_mgnc"><ul>';
	$.each(dataobject,function(i, item) {
		/*if(i==0)
			return;
		title=$(".bbs_mgpsendbn0").parents(".bbs_mgpc").find("span").eq(item.reason-1).attr("title");
		src=$(".bbs_mgpsendbn0").parents(".bbs_mgpc").find("img").eq(item.reason-1).attr("src");*/
		if(item.avatar=="images/tx_100.jpg"){
			item.avatar=basePath+item.avatar;
		}
		html2 +='<li><span class="bbs_mgnc1"><a href="'+basePath+'user.do?method=home&uid='+item.uid+'" target="_blank"><img src="'+item.avatar+'"></a></span> <span class="bbs_mgnc2"><a href="'+basePath+'user.do?method=home&uid='+item.uid+'" target="_blank">'+item.zhName+'</a></span> <span class="bbs_mgnc5">'+item.amount/100+'</span><span class="bbs_mgnc4">'+item.createtimeStr+'</span></li>'
	});
	html2+='</ul></div></div><div class="bbs_dpbn"><a href="javascript:void(0)" class="bbs_dconfirm bbs_qbqr">确&nbsp;&nbsp;定</a></div></div></div>';
	$.popwin(
		 html2, {
     bg: true,title: "查看全部"
     });
}
//查看群赏记录
function showShangsendMsg(){
	var rewardrecord= $("#rewardrecord").val();
	var giftimgPath=$("#giftimgPath").val();
	var giftName=$("#giftName").val();
    var data=rewardrecord.substring(0,rewardrecord.length-1);
	var dataobject= $.parseJSON(data);
	var html2='';
	html2+='<div class="popwin_con"><div class="bbs_dpop2"><div class="bbs_dpn"><div class="bbs_mgnc"><ul>';
	$.each(dataobject,function(i, item) {
		if(item.avatar=="images/tx_100.jpg"){
			item.avatar=basePath+item.avatar;
		}
		html2 +='<li><span class="bbs_mgnc1"><a href="'+basePath+'user.do?method=home&uid='+item.uid+'" target="_blank"><img src="'+item.avatar+'"></a></span> <span class="bbs_mgnc2"><a href="'+basePath+'user.do?method=home&uid='+item.uid+'" target="_blank">'+item.zhName+'</a></span> <span class="bbs_mgnc5">领取了'+item.number+'个</span><span class="bbs_mgnc3"><span><img src="'+giftimgPath+'"/></span><span class="bbs_mgnred">'+giftName+'</span></span><span class="bbs_mgnc4">'+item.createtimeStr+'</span></li>'
	});
	html2+='</ul></div></div><div class="bbs_dpbn"><a href="javascript:void(0)" class="bbs_dconfirm bbs_qbqr">确&nbsp;&nbsp;定</a></div></div></div>';
	$.popwin(
		 html2, {
     bg: true,title: "查看全部"
     });
}
$(".bbs_quns").live("click",function(){
	var createusername=$("#createusername").val();
	var giftName=$(this).attr("giftName");
	$.popwin('<div class="popwin_con"><div class="bbs_dpop"><div class="bbs_dpn"><div class="bbs_dpt">恭喜您，获得</div><div class="bbs_dpc"><span>【'+createusername+'】</span>赏赐的<em>'+giftName+' * 1</em></div></div><div class="bbs_dpbn"><a href="javascript:void(0)" class="bbs_dconfirm bbs_giftconfirm">确&nbsp;&nbsp;定</a></div></div></div>', {
		bg: true,
		title: "领取奖励"
	});
});
$(".bbs_giftconfirm").live("click",function(){
	var tiezitid=$("#tiezitid").val();
	var tiezifid=$("#tiezifid").val();
	$.post(basePath+"giftshow.do", {method:"receiveCrowdRewardGift",tid:tiezitid,fid:tiezifid},function(data){
		if(data.r==200){
		$.popwin.remind('<div class="popwin_success">参与成功</div>',null, {delay:3000,bar:false,btnclose: false	 });	
		     $(".popwin_pbn").hide();
		     window.location.href= basePath + 'xile/thread-'+tiezitid+'.html';
		}else if(data.r==404){
			popError("查不到帖子记录");
		}else if(data.r==405){
			popError("请在最近发言的楼层领取");
		}else if(data.r==406){
			popError("帖子不是群赏贴");
		}else if(data.r==407){
			popError("帖子中没有群赏基本信息ID");
		}else if(data.r==408){
			popError("查不到群赏基本信息");
		}else if(data.r==409){
			popError("群赏状态为不可领奖状态");
		}else if(data.r==410){
			popError("群赏已结束");
		}else if(data.r==411){
			popError("礼物已领完");
		}else if(data.r==412){
			popError("用户已领过该礼物");
		}else if(data.r==413){
			popError("回复楼层数不够不能领奖");
		}else if(data.r==501){
			popError("更新群赏基本信息失败");
		}else if(data.r==502){
			popError("添加群赏礼物领取记录失败");
		}
	});
});
//众筹支付
$("#bbs_zcprimary").live("click",function(){
	var tid=$("#tiezitid").attr("value");
	$.post(basePath+"giftshow.do", {method:"getNounce"},function(data){
		 if (data.r == 403) {            //未登录
                window.location.href = data.loginUrl;
            } else if (data.r == 500){
                popError("服务器数据出错了!");
            } else if(data.r == 200){
                var nonce = data.nonce;
                var passwd=$(".pswd_input").val();
                
                if($.trim(passwd) == ""){
                	popError("请输入支付密码！");
                    return false;
                }else if($.trim(passwd).length < 6){
                	popError("请输入正确格式的密码！");
                    return false;
                }
                var key = CryptoJS.enc.Utf8.parse(nonce);
                var pswd = CryptoJS.enc.Utf8.parse(passwd);
                var transPswd = CryptoJS.AES.encrypt(pswd, key, {iv: key, mode: CryptoJS.mode.CBC});
                var password = transPswd.toString();
            	var fee=$(".price_input").val();
                $.post(basePath+"giftshow.do", {method:"joinCrowdFunding",password:password,fee:fee,tid:tid,nonce:nonce},function(data){
                	if(data.r == 200){
                    			$.popwin.remind('<div class="popwin_success">参与成功</div>',null, {delay:3000,bar:false,btnclose: false	 });	
                    		     $(".popwin_pbn").hide();
                    		     $(".bbs_mrebackb").hide();
                    		     $(".bbs_mrebackd").show();
                    		     window.location.href= basePath + 'xile/thread-'+tid+'.html';
                    } else if(data.r == 404){
                    	 $.popwin.remind('<div class="">帖子不存在</div>',null, {delay:3000,bar:false,btnclose: false	 });
                    	 $(".popwin_pbn").hide();
                    } else if(data.r == 405){
                    	 $.popwin.remind('<div class="">帖子类型不正确</div>',null, {delay:3000,bar:false,btnclose: false	 });
                    	 $(".popwin_pbn").hide();
                    } else if(data.r == 406){
                    	 $.popwin.remind('<div class="">帖子中无法获取众筹基本信息ID</div>',null, {delay:3000,bar:false,btnclose: false	 });
                    	 $(".popwin_pbn").hide();
                    } else if(data.r == 407){
                    	 $.popwin.remind('<div class="">无法获取众筹基本信息</div>',null, {delay:3000,bar:false,btnclose: false	 });
                    	 $(".popwin_pbn").hide();
                    } else if(data.r == 408){
                    	 $.popwin.remind('<div class="">众筹已结束</div>',null, {delay:3000,bar:false,btnclose: false	 });
                    	 $(".popwin_pbn").hide();
                    } else if(data.r == 501){
                    	 $.popwin.remind('<div class="">参与众筹支付失败</div>',null, {delay:3000,bar:false,btnclose: false	 });
                    	 $(".popwin_pbn").hide();
                    } else if(data.r == 555){
                    	 $.popwin.remind('<div class="">服务器出问题了，下次再试哦~</div>',null, {delay:3000,bar:false,btnclose: false	 });
                    }
                });
            }
	});
});
//女神是否接受表白
function biaobaiClick(bb_value){
	  if(bb_value=="1"){
		   $.popwin('<div class="popwin_con"><div class="bbs_dpop"><div class="bbs_dpn"><div class="bbs_dpt">您要接受楼主的表白吗？</div></div><div class="bbs_dpbn"><a href="javascript:void(0)" class="bbs_dconfirm biaobaiQr" accept="true">确&nbsp;&nbsp;定</a></div></div></div>', {
				bg: true,
				title: "友情提示"
			});
	   }else  if(bb_value=="0"){
		   $.popwin('<div class="popwin_con"><div class="bbs_dpop"><div class="bbs_dpn"><div class="bbs_dpt">您要拒绝楼主的表白吗？</div></div><div class="bbs_dpbn"><a href="javascript:void(0)" class="bbs_dconfirm biaobaiQr" accept="false">确&nbsp;&nbsp;定</a></div></div></div>', {
				bg: true,
				title: "友情提示"
			});
	   }
};
$(".biaobaiQr").live("click",function(){
	var tid=$("#tiezitid").attr("value");
	var accept=$(this).attr("accept");
	$.post(basePath+"giftshow.do", {method:"feedbackConfession",tid:tid,accept:accept},function(data){
		 if (data.r == 403) {            //未登录
               window.location.href = data.loginUrl;
           } else if (data.r == 404){
        	   $.popwin.remind('<div class="popwin_success">参与成功</div>',null, {delay:3000,bar:false,btnclose: false	 });
           } else if (data.r == 405){
        	   $.popwin.remind('<div class="popwin_success">该贴不是表白贴</div>',null, {delay:3000,bar:false,btnclose: false	 });
           } else if (data.r == 406){
        	   $.popwin.remind('<div class="popwin_success">该贴没有表白记录ID</div>',null, {delay:3000,bar:false,btnclose: false	 });
           } else if (data.r == 407){
        	   $.popwin.remind('<div class="popwin_success">该贴没有表白记录</div>',null, {delay:3000,bar:false,btnclose: false	 });
           } else if (data.r == 408){
        	   $.popwin.remind('<div class="popwin_success">您不是被表白的女神，无权处理该贴</div>',null, {delay:3000,bar:false,btnclose: false	 });
           } else if (data.r == 200){
        	   $.popwin.remind('<div class="popwin_success">操作成功</div>',null,{onclose: function(){ window.location.href=window.location.href;}});	
           }
	});
});

$(".bbs_bbzc").live("click",function(){
	var tieziaid=$("#tieziaid").attr("value");
	var cfid=$(this).attr("cfid");
	var islike=$(this).attr("islike");
	$.post(basePath+"goddess/forumservlet", {method:"doLikeConfession",aid:tieziaid,cfid:cfid,islike:islike},function(data){
		if (data.r == 40111) {            //未登录
			window.location.href = data.loginUrl;
		} else if (data.r == 40002){
			$.popwin.remind('<div class="popwin_success">参数缺失</div>',null, {delay:3000,bar:false,btnclose: false	 });
		} else if (data.r == 400110){
			$.popwin.remind('<div class="popwin_success">操作失败</div>',null, {delay:3000,bar:false,btnclose: false	 });
		} else if (data.r == 200){
			var likenum=data.likeNum;
			$(".bbs_likenum").text(likenum);
			$(".bbs_dislikenum").text(data.dislikeNum);
			$.popwin.remind('<div class="popwin_success">操作成功</div>',null,{delay:3000,bar:false,btnclose: false	 });
		}
	});
});


XB.bbs_forum = {
		currentUid : -1,	//currentUid	为登录用户的Uid
		userLevel  : -1,
		
		blockReply : false,
		blockPost  : false,
		isNewWin   : false,
		
	    ////讨论区主页 开始
		
		//保存公告栏
		saveNoticeForMain : function(aid,mid,noticeText){
			$.post(basePath+"goddess/forumservlet", {
	        	method:"SaveNoticeForMain",
	        	aid:aid,
	        	mid:mid,
	        	noticeText:noticeText
	        },function(data){
	        	if(data.r == 200){
	        		popSuccess("保存成功！");
	        		noticeText = noticeText.replace("\n","<br/>");
	        		$(".tsite_g1b_notice").html(noticeText);
	        	}else if(data.r == 403){
	        		popError("权限不足！");
	        	}else{
	        		popError("保存失败！");
	        	}
	        });
		},

		
		//保存推荐帖子列表
		saveRecTidListForMain : function(aid,mid,tidList){
			$.post(basePath+"goddess/forumservlet", {
				method:"SaveRecTidListForMain",
				aid:aid,
	        	mid:mid,
	        	tidList:tidList
	        },function(data){
	        	if(data.r == 200){
	        		popSuccess("保存成功！");
	        		XB.bbs_forum.getModuleInfo(aid,mid);
	        	}else if(data.r == 403){
	        		popError("权限不足！");
	        	}else{
	        		popError("保存失败！");
	        	}
	        });
		},
		
		//列出讨论区——>分类——>分类信息：版块公告，版主列表
		getModuleInfo:function(aid,mid){
	        $.post(basePath+"goddess/forumservlet", {
	        	method:"GetModuleInfo",
	        	aid:aid,
	        	mid:mid
	        },
	         function (data) {
	        	 if (data.r == 200) {
	        		 //版块公告信息
	        		 $(".tsite_g1b_notice").html(data.notice);
	        		 //版主列表
	        		 $(".tsite_apdrs_admin_list").html(XB.bbs_forumformatter.formatAdminListItems(data));
	        		 //帖子推荐列表
	         		$(".tsite_g2b_rectidlist").html(XB.bbs_forumformatter.formatRecTidListItems(data));
	             }
	         });
	    },
	    
	    /*过几秒提示自动消失 obj是jquery对象，time是延迟时间，单位ms*/	
	    gt_dis:function(obj,time){	
	    	setTimeout(function(){obj.hide();},time);	
	    },
	    /*调用示例*/
	    /*gt_dis($(".gt_btds"),2000);*/	
	    
	    //加载手机端讨论区——>帖子列表。
	    listTopicsForMob:function(aid, mid, digest, nowPage){
	    	$.post(basePath+"goddess/forumservlet", {
	    		method:"ListTopics",
	    		aid:aid,
	    		mid:mid,
	    		digest:digest,
	    		nowPage:nowPage
	        },
	        function (data) {
	        	var append_html = '';
	        	data = $.parseJSON(data);
	        	if (data.r == 200) {
	        		if(data.c > 0){
	        			append_html = XB.bbs_forumformatter.formatTopicItemsForMob(data);	
	        			$(".gt_blist").attr("nowPage",nowPage);
	        			XB.bbs_forum.gt_dis($(".gt_btds"),300);
	        			$('.gt_blist').append(append_html);
	        		}
	        	}else{
	        		$(".gt_btds").html('<p class="gt_btdp">加载失败，请稍候再试……</p>');
	        	}
	        });
	    },
	    
	    //2013.06.05新增讨论区一期功能：为管理员增加帖子列表的删除功能
		//列出讨论区管理员页面——>帖子列表
	    listTopicsForAdmin:function(aid,nowPage){
	    	$.post(basePath+"goddess/forumservlet", {
	    		method:"ListTopics",
	    		aid:aid,
	    		mid:0,
	    		digest:0,
	    		nowPage:nowPage
	        },
	        function (data) {
	        	if (data.r == 200) {
	        		$(".tsite_atcon").html(XB.bbs_forumformatter.formatForumTopicItemsForAdmin(data));
	        		//分页
	        		var pageHtml = formatPageHTMLForForum(data.nowPage, data.totalPage);
	                $(".tsite_pages_managepage").find(".op_page").remove();
	                $(".tsite_pages_managepage").prepend(pageHtml);
	                $(".op_page a").bind("click", function () {
	                    var tarPage = $(this).attr("data_page");
	                    if(tarPage == ""){
	                   	 	tarPage = $(this).parents(".tsite_pages_managepage").find(".tsite_pgin").attr("value");
	                    }
	                    tarPage = new Number(tarPage);
	                    if(tarPage <= data.totalPage && tarPage >= 1){
	                    	XB.bbs_forum.listTopicsForAdmin(aid, tarPage+"");
	                    }
	                });
	        	}
	        });
	    },
	    
	    //列出搜索结果页面——>帖子列表
	    listTopicsForSearch:function(aid,searchType,q,nowPage){
	    	$.post(basePath+"goddess/forumservlet", {
	    		method:"ListSearchTopicList",
	    		aid:aid,
	    		searchType:searchType,
	    		q:q,
	    		nowPage:nowPage
	        },
	        function (data) {
	        	if (data.r == 200) {
	        		$(".tsite_ba1a_search_nodata").hide();
	        		$(".tsite_ba1a_search_hasdata").show();
	        		$(".tsite_ba1a_search_content").html('"'+data.q.overFlowText(20)+'"');
	        		$(".tsite_ba1a_search_num").html(data.c);
	        		if(data.c > 0){
	        			$(".tsite_atcon").html(XB.bbs_forumformatter.formatForumTopicItems(0,data));
	        			//分页
	        			var pageHtml = formatPageHTMLForForum(data.nowPage, data.totalPage);
	        			$(".tsite_pages_searchpage").find(".op_page").remove();
	        			$(".tsite_pages_searchpage").prepend(pageHtml);
	        			$(".op_page a").bind("click", function () {
	                        var tarPage = $(this).attr("data_page");
	                        if(tarPage == ""){
	                       	 	tarPage = $(this).parents(".tsite_pages_searchpage").find(".tsite_pgin").attr("value");
	                        }
	                        tarPage = new Number(tarPage);
	                        if(tarPage <= data.totalPage && tarPage >= 1){
	                        	XB.bbs_forum.listTopicsForSearch(aid,searchType,q,tarPage+"");
	                        }
	                    });
	        		}
	        	}else{
	        		$(".tsite_ba1a_search_hasdata").hide();
	        		$(".tsite_ba1a_search_nodata").show();
	        	}
	        });
	    },
	    
	    ////我的帖子 开始
	    
	    //列出我的帖子列表，format调用的方法和listTopics一样，依然是formatForumTopicItems
	    listTopicsByUid:function(aid, uid, type, nowPage){
			$.post(basePath+"goddess/forumservlet", {
				method:"GetTopicListByUid",
				aid:aid,
				uid:uid,
				type:type,
	    		nowPage:nowPage
			}, function(data) {
				if (data.r == 200) {
					//type是类型，1表示我发出的
//					if(type == 1 && uid == XB.bbs_forum.currentUid)
//						type = 3;
					$(".tsite_atcon").html(XB.bbs_forumformatter.formatForumTopicItems(0, data, type));
					//分页
	        		var pageHtml = formatPageHTMLForForum(data.nowPage, data.totalPage);
	        		if(data.isAdmin == 3){//超级管理员
	        			$(".tisite_rebn").remove();
	        			$(".tsite_apt1").prepend('<input type="checkbox" class="tisite_remck">');
	        			$(".tisite_rexcon").prepend('<div class="tisite_rebn"><span><label><input type="checkbox" class="tisite_reall">&nbsp;&nbsp;全部选中</label></span> <span class="tisite_rede"><input type="button" class="tisite_redel" value="删除选中"></span> </div>');
	        		}
	                $(".tsite_pages_mypage").find(".op_page").remove();
	                $(".tsite_pages_mypage").prepend(pageHtml);
	                $(".op_page a").bind("click", function () {
	                    var tarPage = $(this).attr("data_page");
	                    if(tarPage == ""){
	                    	 tarPage = $(this).parents(".tsite_pages_mypage").find(".tsite_pgin").attr("value");
	                    }
	                    tarPage = new Number(tarPage);
	                    if(tarPage <= data.totalPage && tarPage >= 1){
//	                    	popError(aid +";"+ uid +";"+ type + ";"+ tarPage)
	                    	XB.bbs_forum.listTopicsByUid(aid,uid,type, tarPage+"");
	                    }
	                });
				}
			});
	    },
	    
	    //加载手机端讨论区——>我的帖子列表。
	    listTopicsByUidForMob:function(aid, uid, type, nowPage){
	    	$.post(basePath+"goddess/forumservlet", {
	    		method:"GetTopicListByUid",
				aid:aid,
				uid:uid,
				type:type,
	    		nowPage:nowPage
	        },
	        function (data) {
	        	var append_html = '';
	        	data = $.parseJSON(data);
	        	//type是类型，1表示我发出的
//				if(type == 1 && uid == XB.bbs_forum.currentUid)
//					type = 3;
	        	if (data.r == 200) {
	        		if(data.c > 0){
	        			append_html = XB.bbs_forumformatter.formatTopicItemsForMob(data);	
	        			$(".gt_blist").attr("nowPage",nowPage);
	        			XB.bbs_forum.gt_dis($(".gt_btds"),300);
	        			$('.gt_blist').append(append_html);
	        		}else{
	        			$(".gt_btds").html('<p class="gt_btdp">已经没有更多了</p>');
	        		}
	        	}else{
	        		$(".gt_btds").html('<p class="gt_btdp">加载失败，请稍候再试……</p>');
	        	}
	        });
	    },
	    
	    //取未读帖子回复个数
	    getMyUnreadTopic:function(aid){
	    	$.post(basePath+"goddess/forumservlet", {
	        	method:"GetMyUnreadTopicNum",
	        	aid:aid
	        },
	         function (data) {
	        	 if (data.r == 200) {
	        		 var count = data.UnreadNum;
//	        		 popError(count);
	        		 if(count >0){
	        			 $(".tsite_apddspn").show();
	        		 }else{
	        			 $(".tsite_apddspn").hide();
	        		 }
	             }
	         });
	    },
	    //取未读帖子回复个数。
	    getMyUnreadTopicNum:function(aid){
			$.post(basePath+"goddess/forumservlet", {
				method:"GetMyUnreadTopicNum",
				aid:aid
			}, function(data) {
				if (data.r == 200) {
					if(data.UnreadNum > 0)
						$(".tsite_apth_label_my_unreadnum").html("("+data.UnreadNum+")");
				}
			});
	    },
	    
	    ////写新帖 开始
	    
	    //写新帖——>列出选择的模块分类
	    listModulesForEditor:function(aid,mid){//传入mid来定位下拉框的选中
	        $.post(basePath+"goddess/forumservlet", {
	        	method:"ListModulesForEditor",
	        	aid:aid
	        },
	         function (data) {
	        	if(typeof data != 'object'){
	        		data = $.parseJSON(data);
	        	}
	        	 if (data.r == 200) {
	        		 $(".tsite_fc1a").html(XB.bbs_forumformatter.formatForumModulesForEditor_items(data));
//	        		 $(".tsite_fc1a")[0].selectedIndex = mid-1;//设置选中的mid 修改为如下：
	        		 $("#tsite_fc1a_selector").val(mid);	   //设置Select的Value值为mid的项选中
	             }
	         });
	    },
	    //写新帖——>发布新帖
	    postTopic:function(tg,aid,module, title, content,atUidList){
	    	$.post(basePath+"goddess/forumservlet", {
	    		method:"PostTopic",
	    		aid:aid,
	        	module:module,
	        	title:title,
	        	content:content,
	        	atUidList:atUidList
	        },
	         function (data) {
	        	 if (data.r == 200) {
	        		 //TODO 在所有弹框的地方试试popSuccess等,熟悉熟悉base.js。 这里改为3秒后消失就更好了。
	        		 popSuccess("发布成功！");
	        		 window.setTimeout(function(){
	        			 var tid = data.tid;
	        			 XB.bbs_forum.blockPost = false;
	        			 $(tg).removeClass("tsite_bfdis").addClass("tsite_post_topic_button");
	            		 window.location.href= basePath + 'xile/thread-'+tid+'.html';
	        		 	}, 1500);
	             }else{
	            	 XB.bbs_forum.blockPost = false;
	            	 $(tg).removeClass("tsite_bfdis").addClass("tsite_post_topic_button");
	            	 if(data.r == 400999){
	            		 popFail("字数太长，发布失败！");
	            	 }else if(data.r == 909){
	            		 popError("您发帖的次数过快，请稍后再尝试！");
	            	 }else if(data.r == 908){
	            		 popError("请勿发送相同的帖子！");
	            	 }else if(data.r == 403){
	                 	popFail("您已被禁言！");
	                 }else if(data.r == 40003){
	                 	popFail("标题不能为空！");
	                 }else if(data.r == 40111){
	                 	popFail("用户未登录，发布失败");
	                 }else if(data.r == 11111){
	                 	popFail("论坛暂未开放，敬请期待！");
	                 }else{
	            		 popFail("发布失败！r="+data.r);
	            	 }
	             }
	         });
	    },
	    
	    //手机端写新帖——>发布新帖
	    postTopicMob:function(tg,aid,module, title, content){
	    	$.post(basePath+"goddess/forumservlet", {
	    		method:"PostTopic",
	    		aid:aid,
	        	module:module,
	        	title:title,
	        	content:content
	        },
	         function (data) {
	        	data = $.parseJSON(data);
	        	 if (data.r == 200) {
	        		 window.setTimeout(function(){
	        			 var tid = data.tid;
	        			 XB.bbs_forum.blockPost = false;
	        			 $(tg).removeClass("gt_bns2").addClass("tsite_mob_post_topic_button");
	            		 window.location.href='/mobile/'+data.gamename+'/forum/detail?id='+tid;
	        		 	}, 1500);
	             }else{
	            	 XB.bbs_forum.blockPost = false;
	            	 $(tg).removeClass("gt_bns2").addClass("tsite_mob_post_topic_button");
	            	 $(tg).val("发送");
	            	 if(data.r == 400999){
	            		 $(".gt_bnts").html("字数太长，发布失败！");
	            	 }else if(data.r == 909){
	            		 $(".gt_bnts").html("您发帖的次数过快，请稍后再尝试！");
	            	 }else if(data.r == 908){
	            		 $(".gt_bnts").html("请勿发送相同的帖子！");
	            	 }else if(data.r == 403){
	            		 $(".gt_bnts").html("您已被禁言！");
	                 }else if(data.r == 40003){
	                	 $(".gt_bnts").html("标题不能为空！");
	                 }else{
	                	 $(".gt_bnts").html("发布失败！");
	            	 }
	             }
	         });
	    },
	    
