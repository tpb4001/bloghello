		$("#bbs_jsQrfirm").live("click",function(){
			var tid=$("#tiezitid").attr("value");
			var day=$(".bbs_pop_nortext .price_input").val();
			$.post(basePath+"giftshow.do", {method:"getNounce"},function(data){
				 if (data.r == 403) {            //未登录
		                window.location.href = data.loginUrl;
		            } else if (data.r == 500){
		                popError("服务器数据出错了!");
		            } else if(data.r == 200){
		                var nonce = data.nonce;
		                var passwd=$(".pswd_input").val();
		                if($.trim(passwd) == ""){
		                    popError("请输入支付密码！");
		                    return false;
		                }else if($.trim(passwd).length < 6){
		                    popError("请输入正确格式的密码！");
		                    return false;
		                }
		                var key = CryptoJS.enc.Utf8.parse(nonce);
		                var pswd = CryptoJS.enc.Utf8.parse(passwd);
		                var transPswd = CryptoJS.AES.encrypt(pswd, key, {iv: key, mode: CryptoJS.mode.CBC});
		                var password = transPswd.toString();
		                $.post(basePath+"giftshow.do", {method:"payAndGetOrder",password:password,type:100,tid:tid,lock:day},function(data){
		                	if(data.r == 200){
                                $.post(basePath+"giftshow.do", {method:"doLockShowThread",tid:tid,lock_time:day,oid:data.orderRecordId},function(data){
                                    if (data.r == 200) {
                                        //订单id
                                        $.popwin.remind('<div class="popwin_success">加锁成功</div>',null, {delay:3000,bar:false,btnclose: false	 });
                                        $(".bbs_jiasuo").show();
                                        $(".bbs_jiesuo").show();
                                        $(".bbs_jiancai").hide();
                                        //window.location.href= basePath + 'xile/thread-'+tid+'.html';
                                    } else if (data.r == 405) {
                                        popError("不能加锁!");
                                    }else if (data.r == 404) {
                                        popError("订单有误!");
                                    }else if (data.r == 500) {
                                        popError("众筹订单有误!");
                                    }
                                });
		                    } else if(data.r == 1){
		                        popError("账号未在寻宝支付激活!");
		                    } else if(data.r == 2){
		                        popError("没绑定手机!");
		                    } else if(data.r == 3){
		                        popError("余额不足");
		                    } else if(data.r == 4){
		                        popError("支付密码不正确!");
		                    } else if(data.r == 5){
		                        popError("MD5签名不正确!");
		                    } else if(data.r == 5){
		                        popError("MD5签名不正确!");
		                    } else if(data.r == 6){
		                        popError("MD5签名不正确!");
		                    } else if(data.r == 501){
		                        popError("输入密码错误1次!");
		                    }else if(data.r == 502){
		                        popError("输入密码错误2次!");
		                    }else if(data.r == 503){
		                        popError("输入密码错误3次或3次以上，请您1小时后再试!");
		                    }
		                });
		            }
			});
		});
