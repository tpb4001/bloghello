				var fid = $(this).attr("data_fid");
				XB.bbs_forum.addOrCanclefavReply(aid,$('.tsite_forum_fav_fid_'+fid), "addfav", XB.bbs_forum.addOrCanclefavReplyCallbackInForumTopicDetail);
			});
			$(".tsite_ki9d").unbind("click");
			$(".tsite_ki9d").live("click",function(){
				var fid = $(this).attr("data_fid");
				XB.bbs_forum.addOrCanclefavReply(aid,$('.tsite_forum_fav_fid_'+fid), "canclefav", XB.bbs_forum.addOrCanclefavReplyCallbackInForumTopicDetail);					 
			});
			
			 $(".tsite_kredp").live("click",function() {
				 var uid = $(this).attr("data_replyuid");
				 var html = '';
				 html += '<div class="popwin_con">'+
				 		 '	<div class="tsite_fm">'+
				 		 '		<div class="tsite_fm_codelist">';
				 XB.bbs_forum.getPrizesListByAdmin(aid,0);
				 html += '		</div>'+
				 	     '		<div class="tsite_fmbn"><input type="button" class="tsite_kredp_add_actcode_btn" uid="'+uid+'" value="确定"/><input type="button" value="取消" class="tsite_fmbnc"/></div>'+
				 		 '	</div>'+
				 		 '</div>';
		         $.popwin(html, {bg: true,title: "发码", btnclose: false });
		      });

			 $(".tsite_fmbnc").live("click",function() {$.popwin.hide();});
			 
			 //绑定发码
			 $(".tsite_kredp_add_actcode_btn").live("click",function(){
				 var uid = $(this).attr("uid");
				 var prizeNameAndNum = [];//复选框 checkbox
				 $('input[class="tsite_fm1_prizeName"]:checked').each(function(){
					 var num = $(this).parents(".tsite_fmi").find(".tsite_fm4_text").val();
					 if(num.trim() == ""){
						 popError("请输入数量。");
						 return;
					 }
					 prizeNameAndNum.push("{\"prizeId\":" + $(this).val()+",\"prizeNum\":"+num+"}");
				 });
				 prizeNameAndNum = "["+prizeNameAndNum + "]";
				 XB.bbs_forum.addActCodeByAdmin(aid,uid, prizeNameAndNum);
			 });
			 
