	$(".tsite_u1bs").live("click",function(){
		$(".tsite_u1cf").hide();
		$(".tsite_u2bn_reason").removeClass("tsite_u2err");
		$(".tsite_u2bn_reason").attr("placeholder","无需输入操作原因");
		$(".tsite_u2bn_reason").attr("disabled",true);
		var selectText = $(this).find("option:selected").text();
		if(selectText == "锁定帖子"){
			$(".tsite_u2bn_reason").attr("disabled",false);
			$(".tsite_u2bn_reason").attr("placeholder","请输入锁帖原因！50个字以内");
			$(".tsite_x3c1_btn").attr("class","tsite_x3c1_btn tsite_kadd_addLock");
		}else if(selectText == "解除锁定"){
			$(".tsite_x3c1_btn").attr("class","tsite_x3c1_btn tsite_kadd_cancelLock");
		}else if(selectText == "分类置顶"){
			$(".tsite_x3c1_btn").attr("class","tsite_x3c1_btn tsite_bc5b1_AddOrCancleTop");
			$(".tsite_bc5b1_AddOrCancleTop").attr("top",1);
		}else if(selectText == "全区置顶"){
			$(".tsite_x3c1_btn").attr("class","tsite_x3c1_btn tsite_bc5b1_AddOrCancleTop");
			$(".tsite_bc5b1_AddOrCancleTop").attr("top",2);
		}else if(selectText == "取消置顶"){
			$(".tsite_x3c1_btn").attr("class","tsite_x3c1_btn tsite_bc5b1_AddOrCancleTop");
			$(".tsite_bc5b1_AddOrCancleTop").attr("top",0);
		}else if(selectText == "设置精华"){
			$(".tsite_u2bn_reason").attr("disabled",false);
			$(".tsite_u2bn_reason").attr("placeholder","请输入加精原因！50个字以内");
			$(".tsite_x3c1_btn").attr("class","tsite_x3c1_btn tsite_kadd_AddOrCancleDigest");
			$(".tsite_kadd_AddOrCancleDigest").attr("digest",1);
			$(".tsite_u1cf").show();
		}else if(selectText == "取消精华"){
			$(".tsite_x3c1_btn").attr("class","tsite_x3c1_btn tsite_kadd_AddOrCancleDigest");
			$(".tsite_kadd_AddOrCancleDigest").attr("digest",0);
		}else{
			$(".tsite_x3c1_btn").attr("class","tsite_x3c1_btn");
		}
	});

