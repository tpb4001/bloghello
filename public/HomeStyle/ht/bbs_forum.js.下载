	    	//绑定：管理员加精功能
	    	$(".tsite_kadd_AddOrCancleDigest").live("click",function(){
	    		var tid = $(".bbs_wrap").find(".tsite_ba1c_mark_tid").attr("tid");
	    		var digest = $(this).attr("digest");
	    		if(digest == 1){
	    			var digestCash = $(this).parents(".tsite_u").find(".tsite_fm4_num").val();
	        		if(isNaN(digestCash) || $.trim(digestCash) == ""){
	        			popError("请输入正确的分值！");
	        		}else if(digestCash < 20 || digestCash > 100){
	        			popError("请输入20 - 100之间的分值！");
	        		}else{
	        			var reason = $(this).parents(".tsite_u").find(".tsite_u2bn_reason").val();
	       			 	if($.trim(reason) == ""){
	       			 		$(".tsite_u2bn_reason").addClass("tsite_u2err");
	       			 		return;
	       			 	}
	        			$(this).removeClass("tsite_kadd_AddOrCancleDigest");
	        			XB.bbs_forum.addOrCancleDigest(this,aid,tid,digest,digestCash,reason);
	        		}
	    		}else{
	    			XB.bbs_forum.addOrCancleDigest(this,aid,tid,digest);
	    		}
	    	});

