	function tsite_sure(){
		if(confirm("是否确定删除选中的帖子？该操作不可恢复。")){
			return true;		
			}else{
		return false;
	}}

	 $(".tisite_redel").live("click",function() {
	            popError(tsite_sure());
	});
	 
	 
	 
	 
	 
	 
