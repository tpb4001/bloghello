	    /*滚动到底部*/
		scrollWindow:function(){
		  document.documentElement.scrollTop = document.body.scrollHeight;
		  document.body.scrollTop = document.body.scrollHeight;
		},
		
		//DEMO: 
		//XB.bbs_forum.fe_scroll(true,null,null,1000); /*跳到页面头部*/
		//XB.bbs_forum.fe_scroll(null,null,true,1000);/*跳到页面底部*/
		//XB.bbs_forum.fe_scroll(null,"asdasd",null,1000);	/*跳到指定ID的元素头部*/
		fe_scroll:function(top,tsid,tbotm,speed){
			$body = (window.opera) ? (document.compatMode == "CSS1Compat" ? $('html') : $('body')) : $('html,body');
			if(top){
				$body.animate({scrollTop:0}, speed);
				return false;
			}
		if(tsid){
//				$body.animate({scrollTop:$('#'+tsid).offset().top-85}, speed);
//				$body.animate({scrollTop:85}, speed);
				$(window).scrollTop($('#'+tsid).offset().top - 85); 
				return false;
		}
			if(tbotm){
				var tbot=$(document).height()-$(window).height();
				if(tbot<0){tbot=0;}
				$body.animate({scrollTop:tbot}, speed);
				return false;
			}
		},
		
		 //@功能 监测键盘事件：
		 watchSearchAtInput:function (elementId,reqAction) {
			 var id;
		     $('#' + elementId).focus(function () {
		    	var k = "";
		    	var d = new Date("January 1,1970"),
		    	d2, k2;
		    	$('#' + elementId).keyup(function (e) {
		    	/*字母数字退格delete、空格、回车键*/
			    	if (e.keyCode >= 48 && e.keyCode <= 90 || e.keyCode == 8 || e.keyCode == 46 || e.keyCode == 32 || e.keyCode == 13) {
			    		k = $(this).val();
			    		if(k == '' || k == '输入Ta的昵称'){
//			    			$(".tsite_qrtnp_tip_list").html('');
			    		}
			    		d = new Date();
			    	}
		    	})
//		    	.keydown(function (e) {
//		    		$(".ts").hide();
//		    	})
		    	;
			    /*设置不间断监测*/
			    id = setInterval(function () {
			    	d2 = new Date();
			    	/*如果输入框内容有变化且大于时间间隔，则发送一次请求*/
			    	if (k2 != k && d2.getTime() - d.getTime() > 800){
			    		k2 = k;
			    		reqAction(k2);
			    	}
			    }, 500);
		     });
		     /*失去焦点的时候清除监测函数*/
		     $('#' + elementId).blur(function () {
		    	 clearInterval(id);
		    	 id = null;
		     });
		},
		
		////-------------------------util 方法结束--------------------------------------------
		
		//发起@请求。
		searchAt : function(s) {
			if(s == "输入Ta的昵称") {
				return;
			}
//			if(s.strLen() >= 2) {
//				XB.bbs_forum.fillSearchAtContent(s);
//			}
			XB.bbs_forum.fillSearchAtContent(s);
	    },
	    
	    fillSearchAtContent : function(name) {
			$.post("space/search", {
				method:"searchUserForHint",
				username:name,
	            pageSize:5
	        }, function(data){
				if(data.r == 200) {
					if(data.c <= 0) {
						$(".tsite_qrtnp_tip_list").html('');
					} else {
						var html = "";
						data.items = $.parseJSON(data.items);
				        $.each(data.items, function (i, item) {
				        	html += '<a href="javascript:void(0)" class="tsite_qrtni" uid="'+item.uid+'">'+item.username+'</a>';
				        });
						$(".tsite_qrtnp_tip_list").html(html);
						$(".tsite_qrtnp_tip_list").show();
					}
				}
			}, "json");
		},
		
		selectItem : function(event) {  
	        var keyCode;
			var ask_tindex = null;
			var ask_tsindex = null;
			var ask_tnum = $(".tsite_qrtn").find(".tsite_qrtni").length;
	            if (window.event) {
	                keyCode = event.keyCode;
	            } else {
	                keyCode = event.which;
	            }
	            if(keyCode == 13) {//ENTER
	            	if ($(".tsite_qrtnic").length > 0) {
	            		var uid = $(".tsite_qrtnic").attr("uid");
	    				$(".tsite_qrat").append('<a href="javascript:void(0)" class="tsite_qti" uid="'+uid+'">@'+$(".tsite_qrtnic").text()+'</a>');	     
	    				$(".tsite_qrtn").hide();
	    				$(".tsite_qrtnic").remove(); 
	            	}
	            }
	            if (keyCode == 38) {//UP
	                if ($(".tsite_qrtnic").length > 0) {
	                    ask_tindex = $(".tsite_qrtni").index($(".tsite_qrtnic")[0]);
	                    ask_tsindex = (ask_tindex > 0) ? ask_tindex - 1 : ask_tnum - 1;						
	                    $(".tsite_qrtni").removeClass("tsite_qrtnic");
	                    $(".tsite_qrtni").eq(ask_tsindex).addClass("tsite_qrtnic");
						event.stopImmediatePropagation();
	                } else {
	                    $(".tsite_qrtni:last").addClass("tsite_qrtnic");
	                }
	            }
	            if (keyCode == 40) {//DOWN
	                if ($(".tsite_qrtnic").length > 0) {						
	                    ask_tdindex = $(".tsite_qrtni").index($(".tsite_qrtnic")[0]);
	                    ask_twindex = (ask_tdindex < ask_tnum - 1) ? ask_tdindex + 1 : 0;
	                    $(".tsite_qrtni").removeClass("tsite_qrtnic");
	                    $(".tsite_qrtni").eq(ask_twindex).addClass("tsite_qrtnic");
						event.stopImmediatePropagation();
	                } else {
	                    $(".tsite_qrtni:first").addClass("tsite_qrtnic");
	                }

	            }       
	    },
	    
	    //init函数
	    init:function(aid){
	    	var curUid = XB.bbs_forum.currentUid;
	    	var aid = aid;
	    	
	    	//绑定：讨论区——>点击导航栏某个分类——>展示分类下的帖子列表。
	    	$(".tsite_apseci").live("click", function(){
	    		var mid = $(this).attr("mid");
	    		$(this).parents(".tsite_aplist").find(".tsite_apth_mid").attr("mid",mid);//更新mid
	    		window.location.href = basePath + 'forum-'+aid+'-'+mid+'.html';
	    	});
	    	//绑定：讨论区——>点击全部/精华——>展示帖子列表。
	    	$(".tsite_apthc_label_main").live("click", function() {
	    		var mid = $(this).parents(".tsite_aplist").find(".bbs_mytables").attr("mid");
	    		var digest = $(this).attr("digest");
	    		if(digest == 1){
	    			window.location.href = basePath +'xile/forum?aid='+aid+'&mid='+mid+'&digest=1';
	    		}else{
	    			window.location.href = basePath + 'xile/forum-' + aid+'-'+mid+'.html';
	    		}
	    	});
	    	//权限管理
	    	$(".tsite_goto_mytopics").live("click",function(){
//	    		window.location.href = basePath +'forum/my?aid='+aid;
	    		if(curUid>0){
	    			window.location.href = basePath +'forum/my?aid='+aid;
	    		}else{
	    			XB.bbs_forum.popUpLoginWin();
	    		}
	    	});
	    	//权限管理
	    	$(".tsite_goto_posttopic").live("click",function(){
	    		if(curUid > 0){
	    			window.open(basePath + 'forum/post?aid='+aid);
	    		}
	    		else{
	    			XB.bbs_forum.popUpLoginWin();
	    		}
//	    		window.location.href = basePath + 'forum/post?aid='+aid;
//	    		window.open(basePath + 'forum/post?aid='+aid);
	    	});
	    	//各个分类下点发帖
	    	$(".tsite_goto_posttopicWithMid").live("click",function(){
	    		if(curUid > 0){
//	    			var mid = $(this).parents(".tsite_aplist").find(".tsite_apth_mid").attr("mid");
	    			window.open(basePath + 'forum/post?aid='+aid);
	    		}
	    		else{
	    			XB.bbs_forum.popUpLoginWin();
	    		}
//	    		window.location.href = basePath + 'forum/post?aid='+aid;
//	    		window.open(basePath + 'forum/post?aid='+aid);
	    	});
	    	//绑定：讨论区——>我的帖子——>点击查看我发起/回复/全部帖子——>展示帖子列表。
	    	$(".tsite_apth_label_my").live("click", function() {
	    		var type = $(this).attr("type");
	    		var uid = $(this).parents(".tsite_apth_toUid").attr("uid");
	    		XB.bbs_forum.listTopicsByUid(aid, uid, type, 1);
	    	});
	    	//绑定：讨论区——>发新帖——>点击发帖
	    	$(".tsite_post_topic_button").live("click", function() {
	    		if(XB.bbs_forum.blockPost)
	    			return;
	    		//获取下拉框的索引值，两种方案都可以： $("#tsite_fc1a_selector")代表的是选择器选择id=tsite_fc1a_selector的元素。
	    		//var module = $(this).parents(".tsite_con").find("#tsite_fc1a_selector")[0].selectedIndex +1;
	    		var mid = $(this).parents(".tsite_con").find("#tsite_fc1a_selector").attr("value");
	    		var title = $(this).parents(".tsite_con").find(".tsite_fc2a").val();
	    		title = $.trim(title);
	    		var content = $(this).parents(".tsite_con").find(".tsite_feditor").val();
	    		content = editor.html();
//	    		popError("mid="+mid+"; title="+title+"; content="+content);
	    		if(mid == 0){
	    			popError("请选择分类！");
	    			return;
	    		}
	    		if(title == "请输入不超过30字的文章标题" || $.trim(title) == ""){
	    			popError("文章标题不能为空，请输入标题！");
	    			return;
	    		}
	    		if(content == ""){
//	    			popError("文章内容不能为空，请输入内容！");
	    			popError("文章内容不能为空，请输入内容！");
	    			return;
	    		}
	    		//@的人列表
				var atUidList = "";
				if($(this).parents(".tsite_con").find(".tsite_qrat_add_list").find(".tsite_qti").length > 15){
					popError("您@的人太多了！");
					return;
				}
				$(this).parents(".tsite_con").find(".tsite_qrat_add_list").find(".tsite_qti").each(function(index,element){
					atUidList += $(element).attr("uid") +",";
				});
	    		XB.bbs_forum.blockPost = true;
	    		$(this).addClass("tsite_bfdis").removeClass("tsite_post_topic_button");
	    		XB.bbs_forum.postTopic(this,aid, mid, title, content,atUidList);
	    	});
	    	
