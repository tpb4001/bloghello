        	// 众筹 修改出价  
        	var myprice = '';
			$(".bbs_pop_nortext .price_input").die("keydown","keyup");
			$(".bbs_pop_nortext .price_input").live("keydown",function(){
				myprice = $(this).val();
			}).live("keyup",function(){
				
				var obj = this;
				if(!$.isNumeric($(obj).val()) || $(obj).val() <= 0 || parseFloat($(obj).val())>10000000){
					$(obj).val(myprice);
					$(".bbs_dfprice").text(myprice);
					return false;
				}else if($(obj).val()>parseInt(cost)){
					$(obj).val(parseInt(cost));
					$(".bbs_dfprice").text(parseInt(cost));
					return false;
				}else{
				$(".bbs_dfprice").text(parseInt($(this).val()));
				}
			});
			$(".bbs_pop_nortext .price_minus").unbind("click").click(function(){
				myprice = parseFloat($(this).siblings('.bbs_pop_nortext .price_input').val());
				if(myprice <= 1){
					return false;	
				}else{
					myprice--;
					$(this).siblings('.bbs_pop_nortext .price_input').val(myprice);
					$(".bbs_dfprice").text(myprice);
				}
			});
			
			$(".bbs_pop_nortext .price_plus").unbind("click").click(function(){
				myprice = parseFloat($(this).siblings('.bbs_pop_nortext .price_input').val());
				if(myprice+1>parseInt(cost)){
					$(".price_input").val(parseInt(cost));
					return false;
				}else if(myprice >= 10000000){
					$(".price_input").val(parseInt(cost));
					return false;	
				}else{
					myprice++;
					$(this).siblings('.bbs_pop_nortext .price_input').val(myprice);
					$(".bbs_dfprice").text(myprice);
				}
			});
        	
        	}
        	if(data.r==403){
        		XB.bbs_forum.popUpLoginWin();
        	}
        });
		    
	});
