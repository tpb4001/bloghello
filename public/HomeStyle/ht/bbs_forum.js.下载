	    //登录弹框，调用铁扣的。
	    popUpLoginWin:function(){
	    	$.popwin.remind('<div class="popwin_warning">请您先登录。<a href="'+loginUrl+'">点击去登录&gt;&gt;</a></div>',null, { bar:false, btnclose: false });
