	        		 var userLevel = XB.bbs_forum.userLevel;
	        		 $("#topic_floor_1").after(XB.bbs_forumformatter.formatHotFavReplyContentItems(data, userLevel));
	        		 if(userLevel == -1 || XB.bbs_forum.currentUid == -1){
//	        			 $(".tsite_bc5").remove();//游客身份，把 tsite_bc5 remove
	        			 $(".tsite_bc5b").remove();//游客身份，把 tsite_bc5b remove
	        		 }
	             }
	         });
	    },
	    
	    //删除帖子
	    deleteTopic:function(aid,tid,fid,reason,tg,callback){
	    	$.post(basePath+"goddess/forumservlet", {
	    		method:"DeleteTopic",
	    		aid:aid,
	        	tid:tid,
	        	fid:fid,
	        	reason:reason
	        },
	         function (data) {
	        	if(data.r == 400131){
	        		popError("帖子已锁定！");
	        	}else{
	        		callback(aid,tg,data);
	        	}
	         });
	    },
	    //帖子详情页删除按钮的callback
	    deleteTopicForDetailCallBack:function(aid,tg,data){
	    	var fid = $(tg).parents(".tsite_bcli_floorId_area").attr("fid");
	    	if (data.r == 200) {
	    		if(fid == 1)
	    			window.location.href= basePath + 'xile/forum-'+aid+'-'+data.mid+'.html';
	    		else{
	    			$(tg).parents(".tsite_bcli_item").remove();
	    			////解决赞区域和普通区域的删除的同步删问题。
	    			if($("#fav_topic_floor_"+fid)){
	    				$("#fav_topic_floor_"+fid).remove();
	    			}
	    			if($("#topic_floor_"+fid)){
	    				$("#topic_floor_"+fid).remove();
	    			}
	    		}
	        }else if(data.r == 403){
	        	popError("权限不足！");
	        }else{
	        	popError("删除出错，请联系管理员！");
	        }
	    },
	    //管理员页面，删除帖子的callback
	    deleteTopicForAdminCallBack:function(aid,tg,data){
	    	if(data.r == 200){
	    		//window.location.href = '/forum/manage?aid='+aid;
	    		$(tg).parents(".tisite_rexcon").find('tr[tid='+data.tid+']').remove();
	    	}else{
	    		popError("帖子tid="+data.tid+" 删除出错，请联系管理员");
	    	}
	    },
	    //回复帖子
	    replyTopic:function(tg,aid,tid,content,mode,fid,atUidList){
	    	$.post(basePath+"goddess/forumservlet", {
	    		method:"ReplyTopic",
	    		aid:aid,
	        	tid:tid,
	        	content:content,
	        	mode:mode,
	        	fid:fid,
	        	atUidList:atUidList
	        },
	         function (data) {
	        	 if (data.r == 200) {
	        		 popSuccess("回复成功！");
	        		 //延迟跳转
	        		 window.setTimeout(function(){
//	        			 window.location.href= data.url;
	        			 var toPage = data.lastPageNum;											//待跳转的页面Num
	        			 var mode = $(tg).attr("mode");				//mode
	        			 if(mode == "edit"){
	        				 toPage = $(".op_page").find(".mc_Pagcur").attr("data_page");		//如果是编辑模式，则本页面内跳转
	        			 }
	        			 window.location.href = basePath + 'xile/thread-'+tid+'--'+(data.fid-1)+'.html';
	        			 $(".tsite_bc7_ref").hide();											//引用框hide
	        			 $('#editor').val("");													//编辑框清空
	        			 $('#randcode').val("");
	        			 $('#searchAt').val("");
	        			 $('#editor').focus();													//编辑框focus
	        			 $(tg).attr("mode","reply");					//mode恢复为一开始的reply mode
	        			 $(".tsite_qrtnp_tip_list").html("");
	        			 $(".tsite_qrat_add_list").html("");
	        			 $('#randimg').trigger("click");
	        			 if(mode == "edit"){
	        				 XB.bbs_forum.fe_scroll(null,"tsite_bc5b1_edit_scroll_clazz",null,1);	//定位到某个ID处
	        			 }else{
	        				 XB.bbs_forum.fe_scroll(null,null,true,1000);							//定位到页面尾部
	        			 };
	        			 XB.bbs_forum.blockReply = false;
	        			 $(tg).removeClass("tsite_bcdis").addClass("tsite_bc7e1a2_reply_topic");
	        		 }, 1500);
	             }else{
	            	 XB.bbs_forum.blockReply = false;
	            	 $(tg).removeClass("tsite_bcdis").addClass("tsite_bc7e1a2_reply_topic");
	            	 if(data.r == 400999){
	                	 popFail("字数太长，发布失败！");
	                 }else if(data.r == 908){
	                	 popFail("请勿重复发送同样的内容！");
	    			 }else if(data.r == 909){
	    				 popFail("您回复的次数过快，喝杯水再来！");
	    			 }else if(data.r == 40003){
	    				 $(".tsite_bc7w4").html("没写内容是不能发布的吆！").show();
	    			 }else if(data.r == 400131){
	    				 popError("帖子已被锁住，无法回复");
	    			 }else if(data.r == 403){
	    				 popFail("您已被禁言！");
	                 }else if(data.r == 300123){
	                	 $(".tsite_bc7w4").html("回复字数太少！").show();
	                 }else if(data.r == 11111){
	                 	popFail("论坛暂未开放，敬请期待！");
	                 }else{
//	                	 popError("回复失败！");//TODO 加上删除出错的提醒
	                 }; 
	             }
	         });
	    },
