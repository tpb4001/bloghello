		//群赏倒计时
		rewardtime:function(intDiff,startTime){
        	var ctime=parseInt($("#shangcurrenttime").attr("value"));
			var currenttime=ctime;
			var tt=startTime+intDiff-currenttime;
			var getStatus=$("#getStatus").val();
        	if(currenttime-startTime >=intDiff || getStatus > 0){
    		    $("#rewardtime").html("群赏已结束");
    		    $("#rewardnum").html('');
    		   /* $(".bbs_mptl").hide();*/
        	}else{
			var day = Math.floor(tt / (60 * 60 * 24)),
			hour=Math.floor(tt / (60 * 60)) - (day * 24),
			minute=Math.floor(tt / 60) - (day * 24 * 60) - (hour * 60),
			second=Math.floor(tt) - (day * 24 * 60 * 60) - (hour * 60 * 60) - (minute * 60);//时间默认值	
			if (minute <= 9) minute = '0' + minute;
			if (second <= 9) second = '0' + second;
			if(day<=0)day='0';
		    $("#rewardtime").html("还剩"+day+"天"+hour+'小时'+minute+'分'+second+'秒');
		    if(intDiff<=0)
			{
			return;
			}
		    window.setInterval(function(){
    			if(intDiff > 0){
    				tt--;
    				day = Math.floor(tt/ (60 * 60 * 24));
    				hour = Math.floor(tt / (60 * 60)) - (day * 24);
    				minute = Math.floor(tt/ 60) - (day * 24 * 60) - (hour * 60);
    				second = Math.floor(tt) - (day * 24 * 60 * 60) - (hour * 60 * 60) - (minute * 60);
    				if (minute <= 9) minute = '0' + minute;
    				if (second <= 9) second = '0' + second;
    			}
    			if(day<0) day = '0';
    			$("#rewardtime").html("还剩"+day+"天"+hour+'小时'+minute+'分'+second+'秒');
    			}, 1000);
        	}
		},
		//众筹倒计时
		crowdFundingtime:function(intDiff,startTime){
        	var ctime=parseInt($("#currenttime").attr("value"));
        	var currenttime=ctime/1000;
			var tt=startTime+intDiff-currenttime;
        	var getStatus=$("#getStatus").val();
        	if(currenttime-startTime>=intDiff || getStatus>0){
    		    $("#crowdFundingtime").html("众筹已结束");
    		    $("#crowdFundingnum").html('');
    		    $(".bbs_zongchou").hide();//隐藏众筹按钮
        	}else{
        		$(".bbs_zongchou").show();
    			var day = Math.floor(tt/ (60 * 60 * 24)),
    		    hour=Math.floor(tt / (60 * 60)) - (day * 24),
    			minute=Math.floor(tt/ 60) - (day * 24 * 60) - (hour * 60),
    			second=Math.floor(tt) - (day * 24 * 60 * 60) - (hour * 60 * 60) - (minute * 60);//时间默认值	
    			if (minute <= 9) minute = '0' + minute;
    			if (second <= 9) second = '0' + second;
    			if(day<0) day = '0';
    		    $("#crowdFundingtime").html("还剩"+day+"天"+hour+'小时'+minute+'分'+second+'秒');
    		    if(intDiff<=0)
    			{
    			return;
    			}
    			window.setInterval(function(){
    			if(intDiff > 0){
    				tt--;
    				day = Math.floor(tt/ (60 * 60 * 24));
    				hour = Math.floor(tt / (60 * 60)) - (day * 24);
    				minute = Math.floor(tt/ 60) - (day * 24 * 60) - (hour * 60);
    				second = Math.floor(tt) - (day * 24 * 60 * 60) - (hour * 60 * 60) - (minute * 60);
    				if (minute <= 9) minute = '0' + minute;
    				if (second <= 9) second = '0' + second;
    			}
    			if(day<0) day = '0';
    			$("#crowdFundingtime").html("还剩"+day+"天"+hour+'小时'+minute+'分'+second+'秒');
    			}, 1000);
        	}
        	
		},
		
