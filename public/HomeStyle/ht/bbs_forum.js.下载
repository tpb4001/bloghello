			 //绑定打赏的按钮。
			 $(".tsite_kgds_addAward_btn").live("click",function(){
				 $(this).parents(".tsite_x3").find(".tsite_x3a4_img").hide();
				 var tid = $(".bbs_wrap").find(".tsite_ba1c_mark_tid").attr("tid");
				 var score = $(this).parents(".tsite_x3").find(".tsite_xsc").text();
				 var reasonSelect = $(this).parents(".tsite_x3").find(".tsite_xsc2_reason").text();
				 score = new Number(score) + 0;
				 var reason = "";
				 if(isNaN(score)){
					 $(this).parents(".tsite_x3").find(".tsite_x3a4_score").show();
					 return;
				 }
				 if(reasonSelect == "选择原因"){
					 $(this).parents(".tsite_x3").find(".tsite_x3a4_reason").show();
					 return;
				 }else if(reasonSelect == "自定义"){
					 var reasonWrite = $(this).parents(".tsite_x3").find(".tsite_x3by").val();
					 reason = reasonWrite;
					 if($.trim(reason) == "" || $.trim(reason) == "请输入不超过30字的打赏原因，自定义原因只对16级以上用户开放 (￣w￣)~*"){
						 $(this).parents(".tsite_x3").find(".tsite_x3by").addClass("tsite_x3bz");
						 return;
					 }
				 }else{
					 reason = reasonSelect;
				 }
				 $(this).removeClass("tsite_kgds_addAward_btn");
				 XB.bbs_forum.addAward(this,aid,tid,score,reason);
			 });
			 
			 //绑定首页热帖的切换
			 $(".tsite_y2c1_hot").live("click",function() {
				 var type = $(this).attr("type");
				 if(type == "award" || type == "beAwarded"){
					 XB.bbs_forum.getHotAwardsListForMain(aid,type);
				 }else if(type == "day" || type == "week" || type == "digest"){
					 XB.bbs_forum.getHotTopicListForMain(aid,type);
				 }
			 });
			 
			 $(".op_page_go_btn").live("click",function(){
				 var tarPage = $(this).attr("data_page");
	             if(tarPage == ""){
	             	tarPage = $(this).parents(".tsite_pages_bottom").find(".tsite_pgin").attr("value");
	             }
	             if(tarPage == undefined){
	             	tarPage = $(this).parents(".tsite_pages_up").find(".tsite_pgin").attr("value");
	             }
	             tarPage = new Number(tarPage);
	             if(tarPage == 0)
	            	 return;
	             var totalPage = $(this).attr("data_totalPage");
	             if(tarPage <= 1)
	            	 tarPage = 1;
	             if(tarPage >= totalPage)
	            	 tarPage = totalPage;
	             var link = $(this).attr("data_link");
	             if(tarPage <= totalPage && tarPage >= 1){
	            	 window.location.href = link+"-"+tarPage+".html";
	             }
			 });
			 
			 $(".op_page_go_btn_url_notrewrite").live("click",function(){
				 var tarPage = $(this).attr("data_page");
	             if(tarPage == ""){
	             	tarPage = $(this).parents(".tsite_pages_bottom").find(".tsite_pgin").attr("value");
	             }
	             if(tarPage == undefined){
	             	tarPage = $(this).parents(".tsite_pages_up").find(".tsite_pgin").attr("value");
	             }
	             tarPage = new Number(tarPage);
	             if(tarPage == 0)
	            	 return;
	             var totalPage = $(this).attr("data_totalPage");
	             if(tarPage <= 1)
	            	 tarPage = 1;
	             if(tarPage >= totalPage)
	            	 tarPage = totalPage;
	             var link = $(this).attr("data_link");
	             if(tarPage <= totalPage && tarPage >= 1){
	            	 window.location.href = link+"&p="+tarPage;
	             }
			 });
			 
			 //绑定帖子列表页是否新窗口打开
			 $('input[name="tsite_apthca_nwin"]').live("click",function(){
				var checked = $('input[name="tsite_apthca_nwin"]:checked').val();
				var isNewWin = false;
				if(checked == "on"){
					isNewWin = true;
				}
				$.post(basePath+"goddess/forumservlet", {
					method:"SaveSessionForNewWin",
					aid:aid,
		        	isNewWin:isNewWin
		        },function(data){
		        	if(data.r == 200){
		        		if(isNewWin == true){//如果定义了新窗口打开
		        			XB.bbs_forum.isNewWin = true;
		        	    	$(".tsite_apt1 a").attr("target","_blank");
		        	    }else{
		        	    	XB.bbs_forum.isNewWin = false;
		        	    	$(".tsite_apt1 a").removeAttr("target");
		        	    }
		        	}else{}
		        });
			 });
			 
			 /*2014-06-10 update 主题站帖子详情 批量删除弹框*/
