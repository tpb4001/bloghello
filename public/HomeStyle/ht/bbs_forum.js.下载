	    //手机端获得帖子内容：
	    getTopicDetailContent_mob:function(aid,tid,onlyLooklzUid,nowPage,fid,isAutoScroll){
	    	$.post(basePath+"goddess/forumservlet", {
	    		method:"GetReplyListByTid",
	    		aid:aid,
	        	tid:tid,
	        	replyUid:onlyLooklzUid,	//只看楼主
	        	nowPage:nowPage
	        },function (data) {
	        	var data = $.parseJSON(data);
	        	 if (data.r == 200){
	        		 var userLevel = XB.bbs_forum.userLevel;
	        		 $(".tsite_bc").attr("nowPage",nowPage);
	        		 XB.bbs_forum.gt_dis($(".gt_btds"),300);
	       			 $(".tsite_bc").append(XB.bbs_forumformatter.formatTopicDetailContent_Mob_Items(data, userLevel));
//	       			 reloadBDShare();			//2013.02.28增加功能：加载百度分享.
	       			/*
	                $(".op_page").die("click");
	               	$(".op_page").live("click", function (){
	                        var tarPage = $(this).attr("data_page");
	                        tarPage = new Number(tarPage);
	                        if(tarPage <= data.totalPage && tarPage >= 1){
	                       	 	XB.bbs_forum.getTopicDetailContent_mob(aid,tid,onlyLooklzUid,tarPage+"",fid,isAutoScroll);
//	                       	 XB.bbs_forum.fe_scroll(true,null,null,1);		//翻页跳页面首部。
	                        }
	                 });
	                 */
	                 /*
	                 if(nowPage == 1){			//第一页，加载这些回复很赞的功能.
	                	 XB.bbs_forum.getAwardsList(aid,tid);
	      				 XB.bbs_forum.getHotFavReplyForTopic(aid,tid);
	      			 }
	                  */
	                 if(isAutoScroll){//如果外部没有指定scroll，则本函数处理scroll，开始计算定位到相应的楼层焦点。
	                	 var pageSize = data.pageSize;
	                	 var to_fid = (data.nowPage -1)*pageSize + 1;
	                	 if(Math.ceil(fid/pageSize) == data.nowPage){
	                		 to_fid = fid;
	                	 }
	                	 setTimeout(function(){
	                		 XB.bbs_forum.fe_scroll(null,"topic_floor_"+to_fid,null,1);
	                	 },500);
	                 }
	             }else if(data.r == -404){
	            	 
	             }else{
	            	 $(".gt_btds").html('<p class="gt_btdp">加载失败，请稍候再试……</p>');
	             }
	         });
	    },
	    
