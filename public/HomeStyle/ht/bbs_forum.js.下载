	    				 $(".gt_bnts").html("没写内容是不能发布的吆！");
	    			 }else if(data.r == 400131){
	    				 $(".gt_bnts").html("帖子已被锁住，无法回复");
	    			 }else if(data.r == 403){
	    				 $(".gt_bnts").html("您已被禁言！");
