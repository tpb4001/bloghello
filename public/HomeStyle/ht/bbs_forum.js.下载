		/*--------------------女神送装晒start--------------------------*/
		getGoddessShowList:function(){
			var tid=$("#sztiezitid").attr("value");
			var aid=$("#sztieziaid").attr("value");
			//女神晒贴页面操作判断
			var bbs_rank;	
			$.post(basePath+"goddess/forumservlet", {method:"queryKouBaiOrLockStatusInShowClothes",aid:aid,tid:tid},function(data){
				bbs_rank=data.gradeGap;//等级差
				var canlock=data.canlock;//是否能加锁
				var canunlock=data.canunlock;//是否能解锁
				var isCut=data.isCut;//是否能剪彩
				var isKouBai=data.isKouBai;//是否能叩拜
				var isLessThanSixHours=data.isLessThanSixHours;//女神晒装是否已满6小时
				//女神晒装是否已满6小时
				if(canlock){//有加锁时间 能加锁
					if(canunlock){//加锁时间未截止
						//送装者
						$(".bbs_jiasuo").show();//红色加锁
						$(".bbs_jiesuo").show();//红色解锁
						//非女神其他人
						$(".bbs_jiancai2").show();//灰色剪彩
						$(".bbs_koubai").show();$(".bbs_kb2").show();//灰色叩拜
						$(".bbs_kb1").hide();
						$(".imgAll").attr("passImg","0");
					}else{
						if(bbs_rank>0&&isKouBai){//非送装者&&非女神&&相应守护等级小于送装者
							$(".bbs_koubai").show();$(".bbs_kb1").show();//红色叩拜
							$(".bbs_kb2").hide();
							$(".imgAll").attr("passImg","1");
						}
					}
				}else{//无加锁时间  不能加锁
					if(isLessThanSixHours&&isCut){//女神晒装未满6小时&&未剪彩
						//送装者
						$(".bbs_jiancai").show();//红色剪彩
						$(".bbs_jiasuo").show();//红色加锁
						//非女神其他人
						$(".bbs_jiancai2").show();//灰色剪彩
						$(".bbs_koubai").show();$(".bbs_kb2").show();//灰色叩拜
						$(".bbs_kb1").hide();
						$(".imgAll").attr("passImg","0");
					}else{
						if(bbs_rank>0&&isKouBai){//非送装者&&非女神&&相应守护等级小于送装者
							$(".bbs_koubai").show();$(".bbs_kb1").show();//红色叩拜
							$(".bbs_kb2").hide();
							$(".imgAll").attr("passImg","1");
						}
					}
				}
				
				
				
				/*if(canlock){
					$(".bbs_jiasuo").show();
					$(".jiasuo").show();
				}
				if(canunlock){
					$(".bbs_jiesuo").show();
					$(".jiesuo").show();
				}
				if(isCut){
					$(".bbs_jiancai").show();
					$(".bbs_jiancai2").show();
				}
				if(isKouBai){
					$(".bbs_koubai").show();
					$(".bbs_kb1").show();
					$(".bbs_kb2").hide();
				}else{
					$(".bbs_koubai").show();
					$(".bbs_kb2").show();
					$(".bbs_kb1").hide();
				}*/
				
			});
			//叩拜记录
			$.post(basePath+"giftshow.do", {
				method:"getKoubaiRecordList",
				tid:tid
				},function(data){
					if (data.r == 200 && data.count > 0) {
			        	var html = '';
			        	var koubaidz='';
			        	$("#bbs_kbcount").html(data.count);
			        	//popError(data.items);
			        	/*data.list = $.parseJSON(data.list);*/
			        	html+='<ul>';
						$.each(data.list,function(i, item) {
							if(i>1)
								return;
							if(item.koubai_id==1){
								koubaidz="深深鞠了一躬";
							}else if(item.koubai_id==2){
								koubaidz="单膝跪地";
							}else if(item.koubai_id==3){
								koubaidz="五体投地";
							}else if(item.koubai_id==4){
								koubaidz="作了一个揖";
							}
							if(item.avatar=="images/tx_30.jpg"){
								item.avatar=basePath+item.avatar;
							}
							html += '<li><span class="bbs_mgnc1"><a href="'+basePath+'user.do?method=home&uid='+item.uid+'" target="_blank"><img src="'+item.avatar+'"></a></span> <span class="bbs_mgnc2"><a href="'+basePath+'user.do?method=home&uid='+item.uid+'" target="_blank">'+item.username+'</a></span><span class="bbs_mgnc7">为了查看女神晒图，向送装者<em>'+koubaidz+'！</em></span><span class="bbs_mgnc4">'+item.koubai_time+'</span></li>'
						});
						html+='</ul>';
			        	$(".bbs_mgnkb").html(html);
			        	//查看全部
			        	$(".bbs_kblookall").click(function(){
			        		var html2='';
			        		html2+='<div class="popwin_con"><div class="bbs_dpop2"><div class="bbs_dpn"><div class="bbs_mgnc"><ul>';
			        		$.each(data.list,function(i, item) {
			        			if(item.koubai_id==1){
									koubaidz="深深鞠了一躬";
								}else if(item.koubai_id==2){
									koubaidz="单膝跪地";
								}else if(item.koubai_id==3){
									koubaidz="五体投地";
								}else if(item.koubai_id==4){
									koubaidz="作了一个揖";
								}
			        			if(item.avatar=="images/tx_30.jpg"){
									item.avatar=basePath+item.avatar;
								}
			        			html2 +='<li><span class="bbs_mgnc1"><a href="'+basePath+'user.do?method=home&uid='+item.uid+'" target="_blank"><img src="'+item.avatar+'"></a></span> <span class="bbs_mgnc2"><a href="'+basePath+'user.do?method=home&uid='+item.uid+'" target="_blank">'+item.username+'</a></span><span class="bbs_mgnc7">为了查看女神晒图，向送装者<em>'+koubaidz+'！</em></span><span class="bbs_mgnc4">'+item.koubai_time+'</span></li>'
			        		});
			        		html2+='</ul></div></div><div class="bbs_dpbn"><a href="javascript:void(0)" class="bbs_dconfirm bbs_qbqr">确&nbsp;&nbsp;定</a></div></div></div>';
			        	 $.popwin(
			        			 html2, {
			                 bg: true,title: "查看全部"
			                 });
			        	});
			        }
			        else if(data.count==0){
			        	$(".bbs_looklist").hide();
		        	}
			});
			//送装晒贴叩拜
			$(".kouBai").live("click",function(){
			$.popwin('<div class="popwin_con"><div class="bbs_dpop"><div class="bbs_dpn"><div class="bbs_dmts1">您的守护<span>等级差小于等于3</span>必须采取“<span>深深鞠了一躬</span>”</div><div class="bbs_dmts1">您的守护<span> 等级差大于3小于等于5</span>必须采取“<span>单膝跪拜</span>”</div><div class="bbs_dmts1">您的守护<span>等级差大于5</span>必须采取“<span>五体投地</span>”</div><div class="bbs_dmlist"><ul><li title="深深鞠了一躬"><img src="'+basePath+'images/bbs_images/bbs_act8.png"></li><li title="单膝跪地"><img src="'+basePath+'images/bbs_images/bbs_act9.png"></li><li title="五体投地"><img src="'+basePath+'images/bbs_images/bbs_act10.png"></li><li title="作揖" style="display:none;"><img src="'+basePath+'images/bbs_images/bbs_act11.png"></li></ul></div></div><div class="bbs_dmtime">您已经叩拜成功，请耐心等待<span>5</span>秒</div> <div class="bbs_dpbns"><a href="javascript:void(0)" class="bbs_dmbn1 bbs_dmbnds" >叩&nbsp;&nbsp;拜</a><a href="javascript:void(0)" class="bbs_dmbn2" id="bbs_kpqx">取&nbsp;&nbsp;消</a></div></div></div>', {
		         bg: true,btnclose: false,title: "叩拜"
		         });
			});
			$(".bbs_dmlist li").live("click",function(){
			 $(".bbs_dmlist li").removeClass("bbs_dmlisec");	
			 $(this).addClass("bbs_dmlisec");
			
			});
			$(".bbs_dmlist li").live("click", function() {
				
				var bbs_dmindex = $(this).index();
					
				if (bbs_rank<=3) {
					if(bbs_dmindex==0 || bbs_dmindex==3){	
						$(this).parents('.bbs_dpop').find(".bbs_dmts1").hide();
						$(".bbs_dmbn1:visible").removeClass("bbs_dmbnds").attr("id","bbs_kb");
					}else{
						$(this).parents('.bbs_dpop').find(".bbs_dmts1:eq(0)").show();
						$(".bbs_dmbn1:visible").addClass("bbs_dmbnds").attr("id","");
					}
				}
				if (bbs_rank>3 && bbs_rank<=5) {
					if(bbs_dmindex==1){	
						$(this).parents('.bbs_dpop').find(".bbs_dmts1").hide();
						$(".bbs_dmbn1:visible").removeClass("bbs_dmbnds").attr("id","bbs_kb");				
					}else{
						$(this).parents('.bbs_dpop').find(".bbs_dmts1:eq(1)").show();
						$(".bbs_dmbn1:visible").addClass("bbs_dmbnds").attr("id","");
					}
				}
				if (bbs_rank>5) {
					if(bbs_dmindex==2){	
						$(this).parents('.bbs_dpop').find(".bbs_dmts1").hide();
						$(".bbs_dmbn1:visible").removeClass("bbs_dmbnds").attr("id","bbs_kb");				
					}else{
						$(this).parents('.bbs_dpop').find(".bbs_dmts1:eq(2)").show();
						$(".bbs_dmbn1:visible").addClass("bbs_dmbnds").attr("id","");
					}
				}
				
				$(".bbs_dmbn1:visible").attr("kbid",bbs_dmindex+1);
			
				$(".bbs_dmlist li").removeClass("bbs_dmlisec");
				$(this).addClass("bbs_dmlisec");
			});
			//确认叩拜
			$("#bbs_kb").live("click",function(){
				var koubai_id=$(this).attr("kbid");
				$.post(basePath+"giftshow.do", {method:"orz",tid:tid,koubai_id:koubai_id},function(data){
					if(data.r==200){
						$.popwin.hide();
						$(".bbs_koubai").hide();
						popSuccess("叩拜成功！");
						window.location.href= basePath + 'xile/thread-'+tid+'.html';
					}else if(data.r==403){
						popError("请登录");
					}else if(data.r==404){
						popError("非法帖子");
					}else if(data.r==405){
						popError("您已叩拜过了");
					}else if(data.r==407){
						popError("以您的等级，无须行礼");
					}else if(data.r==601){
						popError("必须鞠躬或者作揖");
					}else if(data.r==602){
						popError("必须单膝跪拜");
					}else if(data.r==603){
						popError("必须五体投地");
					}
				});
			});
			$("#bbs_kpqx").live("click",function(){
				$.popwin.hide();
			});
		},
		
		//对tid进行打赏
		addAward:function(tg,aid,tid,score,reason){
			$.post(basePath+"goddess/forumservlet", {
				method:"AddAward",
				aid:aid,
				tid:tid,
				score:score,
				reason:reason
			},function (data) {
		        if (data.r == 200) {
		        	window.setTimeout(function(){
//		        		$(tg).addClass("tsite_kgds_addAward_btn");
		        		XB.bbs_forum.getAwardsList(aid,tid);
		        		popSuccess("打赏成功！");
		        	}, 500);
		        }else{
		        	$(tg).addClass("tsite_kgds_addAward_btn");
		        	if(data.r == 40002){
			        	popError("参数不合法！");
			        }else if(data.r == 40311){
			        	if(score > 0)
			        		popError('该用户今日被打赏 “奖励” 额度已满，您可选择打赏0乐豆表示支持或反对！');
			        	if(score < 0)
			        		popError('该用户今日被打赏 “反对” 额度已满，您可选择打赏0乐豆表示支持或反对！');
			        }else if(data.r == 40361){
			        	var that = tg;
			        	var remainScore = 50 - data.remain;
			    		popConfirm('被打赏每日“奖励”额度为50，该用户已被打赏'+data.remain+'，继续打赏只加剩余的'+remainScore+'乐豆，是否继续？', function(){
			    			XB.bbs_forum.addAward(that,aid, tid,remainScore,reason);
			    		});
			        }else if(data.r == 40301){
			        	var that = tg;
			        	var remainScore = -10 - data.remain;
			    		popConfirm('被打赏每日“反对”额度为-10，该用户已被打赏'+data.remain+'，继续打赏只扣剩余的'+remainScore+'乐豆，是否继续？', function(){
			    			XB.bbs_forum.addAward(that,aid, tid,remainScore,reason);
			    		});
			        }else if(data.r == 40081){
			        	popError("您已打赏过本帖，不能继续打赏o(>﹏<)o");
			        }else if(data.r == 400132){
			        	popError("亲，不能给自己打赏哦！");
			        }else{
			        	popError("失败！r="+data.r);
			        }
		        }
		    });
		},
		
		//获得用户的打赏分值等信息。
