			     $.popwin(html, {bg: true,title: "批量删除",btnclose: false});
			     $.Placeholder.init();
			  });
			 $(".tsite_x3c1_del_all_btn").live("click",function(){
				 var tid = $(".bbs_wrap").find(".tsite_ba1c_mark_tid").attr("tid");
				 var reason = $(this).parents(".tsite_x3").find(".tsite_x3by").val();
				 if(reason == ""){
					 reason = "请勿灌水！";
				 }
				 popConfirm("&nbsp删除后将无法恢复，是否确认删除？", function(){
					 $('input[class="tsite_bcpdck"]:checked').each(function(){
						 var fid = $(this).attr("fid");
						 XB.bbs_forum.deleteTopic(aid, tid,fid,reason, this, XB.bbs_forum.deleteTopicForDetailCallBack);
					 });
	 			});
			 });
			 $(".tsite_x3c2 a").live("click",function(){
				 $.popwin.hide();
			 });
			 $(".tsite_set_24_hottopics").live("click",function(){
				 $.popwin('<div class="popwin_con"><div class="tsite_g3 tsite_g3_notice"><textarea class="tsite_g3_rec24_text"></textarea><div class="tsite_g3a"><input type="button" class="tsite_g3a_save_rec24_btn"/><a class="tsite_g3a_cancel" href="javascript:void(0);">取消修改</a><div class="rs_clear"></div></div></div></div>', {
			    		bg: true,title: "24小时热帖推荐编辑，格式为tid1,tid2"
			     });
			    $(".tsite_g3_rec24_text").val($(".tsite_g1b_notice").text());
			    $(".tsite_g3a_save_rec24_btn").live("click",function(){
			    	var tidList = $(".tsite_g3_rec24_text").val();
			    	$.post(basePath+"goddess/forumservlet", {
			        	method:"SaveRec24ForMain",
			        	aid:aid,
			        	tidList:tidList
			        },function(data){
			        	if(data.r == 200){
			        		popSuccess("保存推荐成功！");
			        	}else if(data.r == 403){
			        		popError("权限不足！");
			        	}else{
			        		popError("保存失败！");
			        	}
			        });
			    });
			 });
	    }
