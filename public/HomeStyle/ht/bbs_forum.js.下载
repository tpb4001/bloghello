        				var zhid=data.uid;
        				var title=$(".bbs_t_title").text();
        				 $.popwin('<div class="popwin_con"><div class="bbs_pop_mid"><div class="bbs_pop_nortext"><span class="bbs_pop_fl pl30 pr10">请选择加锁天数</span><span class="price_minus">-</span><input type="text" value="1" class="price_input"><span class="price_plus">+</span> <div class="bbs_pop_fl pl5">天</div><div class="clearfix"></div></div><table class="bbs_pop_tbgray"><tbody><tr><td class="left">类型</td><td>相册附加私享锁</td></tr><tr><td class="left">内容</td><td>'+title+'</td></tr><tr><td class="left">待付金额</td><td><span class="price_color df_price">5</span> 元</td></tr><tr><td class="left">可用余额</td><td><span class="price_color">'+balance+'</span> 元</td></tr><tr><td class="left">寻宝支付账号</td><td><span class="blue_txt">'+zhid+'</span></td></tr></tbody></table><div class="bbs_pop_nortext"><span class="bbs_pop_fl pl30 pr10">寻宝支付密码：</span><input type="password" class="pswd_input"><div class="clearfix"></div></div><a class="bbs_pop_btn_primary" id="bbs_jsQrfirm" href="javascript:void(0)">确认支付</a></div></div>', {
