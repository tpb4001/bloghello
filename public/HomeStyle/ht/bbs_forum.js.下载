	$(".bbs_zongchou").live("click",function(){
		var bbs_Title=$("#bbs_Title").attr("value");
		$.post(basePath+"giftshow.do",{
            method:"getBalanceById"
        },function(data){
        	//剩余众筹金额
        	var cost = $("#crowdFundingtime").parents(".bbs_mnsbk").find(".bbs_mpn2").find("span").text()-$("#crowdFundingtime").parents(".bbs_mnsbk").find(".bbs_mpbarp").find("span").eq(0).text();
