	    //管理员加精/取消加精功能
	    addOrCancleDigest:function(tg,aid,tid,digest,digestCash,reason){
	    	$.post(basePath+"goddess/forumservlet", {
	    		method:"AddOrCancleDigestOrTop",
	    		aid:aid,
	        	tid:tid,
	        	digest:digest,
	        	digestCash:digestCash,
	        	reason:reason
	        },
	         function (data) {
	        	 if (data.r == 200) {
	        		 popSuccess("成功！");
	        		 $(".tsite_bcrz").find(".tsite_bc2b3").attr("digest",digest);
	        		 var tip_text = (digest == 1) ? '[精<em class="tsite_bcadd">+'+digestCash+'</em>]':'';
	        		 $(".tsite_bcrz").find(".tsite_bc2b3_digest").html(tip_text);
	             }else if(data.r == 40081){
	            	 popError("帖子已加精！");
	             }else if(data.r == 40002){
	            	 popError("参数不合法！");
	             }else{
	            	 popError("操作失败！");
	             }
	         });
	    },
	    //置顶/取消置顶
	    addOrCancleTop:function(aid,tid,top){
	    	$.post(basePath+"goddess/forumservlet", {
	    		method:"AddOrCancleDigestOrTop",
	    		aid:aid,
	        	tid:tid,
	        	top:top
	        },
	         function (data) {
	        	if (data.r == 200) {
		       		$(".tsite_bcrz").find(".tsite_bc2b3").attr("top",top);
		       		var tip_text = (top == 0) ? '':'[顶]';
		       		$(".tsite_bcrz").find(".tsite_bc2b3_top").text(tip_text);
		       		popSuccess("成功！");
	            }else if(data.r == 403){
	            	popError("您没有该权限！");
	            }else if(data.r == 4001110){
	            	$.popwin.remind("本分类置顶帖个数最多为5个，不能再置顶了。",function(){}, {bar:false,btnclose: false});
	            }else if(data.r == 4001111){
	            	$.popwin.remind("全区置顶帖个数最多为15个，不能再置顶了。",function(){}, {bar:false,btnclose: false});
	            }else if(data.r == 40081){
	           	 	popError("帖子置顶/取消置顶操作重复！");
	            }else if(data.r == 40002){
	           	 	popError("参数不合法！");
	            }else{
	           	 	popError("操作失败！r="+data.r);
	            }
	         });
	    },
	    
	    //赞回复或取消赞回复
		//act="addfav"表示赞，act="canclefav"表示取消赞
		addOrCanclefavReply:function(aid,tg, act, callback){
			var tid = $(tg).attr("data_tid");
			var fid = $(tg).attr("data_fid");
			$.post(basePath+"goddess/forumservlet", {
				method:"AddOrCanclefavReply",
				aid:aid,
				tid:tid,
				fid:fid,
				act:act
			},function(data){
				if (data.r == "40111"){
					XB.auth.login.popLoginWin();
				}else if (data.r == "400131"){
					popError("帖子已锁住！");
				}else{
					callback(tg, data, act, tid, fid);
				}
			});
		},
		
		//讨论区帖子详情页中，对回复楼，赞或取消赞的回调函数
		addOrCanclefavReplyCallbackInForumTopicDetail:function(tg, data, act, tid, fid){
			if (data.r == 200){
				var count = new Number($(".data_favCount_" + tid + "_" + fid).html());
				if (act == "addfav"){
					count++;
					$(tg).removeClass("tsite_ki9c").addClass("tsite_ki9d");
				}else if (act == "canclefav"){
					popSuccess("取消成功",1000);
					count--;
					$(tg).removeClass("tsite_ki9d").addClass("tsite_ki9c");
				}
				$(".data_favCount_" + tid + "_" + fid).html(count);
			}else{
				if (act == "addfav"){
					popError("点赞失败！code=" + data.r);
				}else{
					popError("取消赞失败！code=" + data.r);
				}
			}
		},
		
		addOrCancleLock:function(tg,aid,tid,lockflag,reason){
			$.post(basePath+"goddess/forumservlet", {
				method:"AddOrCancleLock",
				aid:aid,
				tid:tid,
				lockflag:lockflag,
				reason:reason
			},function(data){
				if (data.r == "40111"){
					XB.auth.login.popLoginWin();
				}else if (data.r == 200) {
		       		if(lockflag == 1){//锁
		       			$(".bbs_wrap").find(".tsite_ba1c_mark_tid").attr("lockflag",1);
		       			$(".tsite_bdz").hide();
		       		}else{
		       			$(".bbs_wrap").find(".tsite_ba1c_mark_tid").attr("lockflag",0);
		       			$(".tsite_bdz").show();
		       		}
		       		var tip_text = (lockflag == 0) ? '':'[锁]';
		       		$(".tsite_bcrz").find(".tsite_bc2b3_lockflag").text(tip_text);
		       		popSuccess("成功！");
	            }else if(data.r == 403){
	            	popError("您没有该权限！");
	            }else{
	            	popError("失败！r="+data.r);
	            }
			});
		},
		
		//后台管理员发码功能
		addActCodeByAdmin:function(aid,uid,prizeNameAndNum, callback){
			$.post(basePath+"goddess/forumservlet", {
				method:"AddActCodeByAdmin",
				aid:aid,
				uid:uid,
				prizeNameAndNum:prizeNameAndNum
			},function(data){
				if (data.r == "40111"){
					XB.auth.login.popLoginWin();
				}else if(data.r == "403"){
					popError("您没有该权限！");
				}else if(data.r == 300){
					popError("请选择礼包。");
				}else if(data.r == 200){
					popSuccess("加入发码。",1000);
				}else{
					popError("出错。");
				}
			});
		},
		
