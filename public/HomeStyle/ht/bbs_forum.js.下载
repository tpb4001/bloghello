	        		if($.trim(reason) == ""){
	        			var placeholder = $(this).parents(".tsite_u").find(".tsite_u2bn_reason").attr("placeholder");
	        			if($.trim(placeholder) == "请勿灌水！"){
	        				reason = placeholder;
	        			}else{
	        				$(".tsite_u2bn_reason").addClass("tsite_u2err");
	       			 		return;
	        			}
	   			 	}
//	        		popError("tid="+tid+"; fid="+fid+";reason="+reason);
	        		popConfirm("&nbsp删除后将无法恢复，是否确认删除？", function(){
	        			$(this).removeClass("tsite_bc5b1_delete_btn");
	        			XB.bbs_forum.deleteTopic(aid, tid,fid,reason, that, XB.bbs_forum.deleteTopicForDetailCallBack);
	        		});
	        	});
	    	});
	    	
