	$(".bbs_mgpsendbn2").live("click",function(){
		 var value = $("input[name='bbs_mgpd']:checked").siblings("span").text().replace(/[^0-9]/ig,"");//连送个数
		 var tid = $(".bbs_wrap").find(".tsite_ba1c_mark_tid").attr("tid");
