	    		var tidList = "[";
	    		var tidListClazz = $(this).parents(".tsite_g4_rectidlist").find(".tsite_g4a1");
	            $(tidListClazz).each(function(){
					var name = $.trim($(this).find(".tsite_g4a1a").val());
					var tid = $.trim($(this).find(".tsite_g4a1b").val());
					var str = '{"name":"'+name+'","tid":"'+tid+'"},';
					if(name != "" && tid != "" && name != "输入帖子名称" && tid != "帖子ID")
						tidList = tidList.concat(str);
				});
	            tidList = tidList.substring(0, tidList.lastIndexOf(","));
	            tidList = tidList.concat("]");
	    		XB.bbs_forum.saveRecTidListForMain(aid, mid, tidList);
	    	});
	    	
