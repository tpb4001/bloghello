	$(".bbs_mgpsendbn1").live("click",function(){
		 var value= parseInt($(this).parents(".bbs_mgpc").find(".bbs_mgpsendp").attr("value"));//购买个数
		 var tid = $(".bbs_wrap").find(".tsite_ba1c_mark_tid").attr("tid");
		 var id = $(this).parents(".bbs_mgpc").find(".bbs_mgplic").attr("value");	//礼物id 
		 var num= parseInt($(this).parents(".bbs_mgpc").find(".bbs_mgplic").find("i").attr("value"));//剩余个数
		 if(num == undefined) 
			 {
			 popError("请先选择礼物。");
			 }
		 else if(value>num)
			 {
			 var aa=value-num;
			 $.popwin('<div class="popwin_con"><div class="bbs_pop_mid"><div class="bbs_pop_alarm"><div class="bbs_pop_alarmtxt"><div class="bbs_pop_bigo">亲，你的礼物数不够，请先去购买</div></div><div class="clearfix"></div></div><a class="bbs_pop_btn_primary" target="_blank" href="'+yzBaseUrl+'/purchase.gsp?method=mall#gift">立即去购买</a></div></div>', {
		         bg: true,title: "礼物数不够"
		         });
			 }
		 else
		 {
		 $.post(basePath+"goddess/forumservlet",{
			 method:"AddAward",
			 aid:aid,
			 tid:tid,
			 type:1,
		     num:value,
		     id:id
		 },function(data){
			 if(data.r==200){
				 popSuccess("赠送成功！");
				 window.setTimeout(function(){
            		 window.location.href= basePath + 'xile/thread-'+tid+'.html';
        		 	}, 1500);
			 }else if(data.r==404){
				 $.popwin.remind(' <div class="popwin_warning">亲，礼物自能送给女神哦~</div> ',null, { bar:false, btnclose: false });

			 }
		 });
