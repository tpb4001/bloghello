	$("#bbs_zfQrfirm").live("click",function(){
		var tid=$("#tiezitid").attr("value");
		var aid=$("#bbs_pop_address").attr("addressid");
		var type=$("#sendtype").attr("value");
		$.post(basePath+"giftshow.do", {method:"getNounce"},function(data){
			 if (data.r == 403) {            //未登录
	                window.location.href = data.loginUrl;
	            } else if (data.r == 500){
	                popError("服务器数据出错了!");
	            } else if(data.r == 200){
	                var nonce = data.nonce;
	                var passwd=$(".pswd_input").val();
	                if($.trim(passwd) == ""){
	                    popError("请输入支付密码！");
	                    return false;
	                }else if($.trim(passwd).length < 6){
	                    popError("请输入正确格式的密码！");
	                    return false;
	                }
	                var key = CryptoJS.enc.Utf8.parse(nonce);
	                var pswd = CryptoJS.enc.Utf8.parse(passwd);
	                var transPswd = CryptoJS.AES.encrypt(pswd, key, {iv: key, mode: CryptoJS.mode.CBC});
	                var password = transPswd.toString();
	                $.post(basePath+"giftshow.do", {method:"payAndGetOrder",password:password,type:type,tid:tid},function(data){
	                	if(data.r == 200){
	                		//订单id
	                		var orderRecordId = data.orderRecordId;
	                		
	                    	$.post(basePath+"giftshow.do", {method:"backAfterPay",tid:tid,back_order_id:orderRecordId,back_addr_id:aid,sendtype:$("#sendtype").val()},function(data){
	                    		if(data.r == 200){
	                    			$.popwin.remind('<div class="popwin_success">索要成功</div>',null, {delay:3000,bar:false,btnclose: false	 });	
	                    		     $(".popwin_pbn").hide();
	                    		     $(".bbs_mrebackb").hide();
	                    		     $(".bbs_mrebackd").show();
	                    		     window.location.href= basePath + 'xile/thread-'+tid+'.html';
	                    		}else{
	                    			popError("回购状态更新失败!r="+data.r);
	                    		}
	                    	});
	                    }else if(data.r == -1){
	                    	popError("订单号必须大于0");
	                    }else if(data.r == -2){
	                    	popError("订单金额必须大于0");
	                    }else if(data.r == -3){
	                    	popError("买家账号必须大于0");
	                    }else if(data.r == -4){
	                    	popError("买家名字不能为空");
	                    }else if(data.r == -5){
	                    	popError("商品名字不能为空");
	                    }else if(data.r == -6){
	                    	popError("买家IP不能为空");
	                    }else if(data.r == -7){
	                    	popError("支付密码不能为空");
	                    }else if(data.r == -8){
	                    	popError("支付结果异常");
	                    }else if(data.r == -9){
	                    	popError("支付结果异常");
	                    }else if(data.r == -10){
	                    	popError("支付结果异常");
	                    }else if(data.r == -11){
	                    	popError("一小时内密码错误重试次数超过5次");
	                    }else if(data.r == 1){
	                        popError("账号未在寻宝支付激活!");
	                    } else if(data.r == 2){
	                        popError("没绑定手机!");
	                    } else if(data.r == 3){
	                        popError("余额不足");
	                    } else if(data.r == 4){
	                        popError("支付密码不正确!");
	                    } else if(data.r == 5){
	                        popError("MD5签名不正确!");
	                    } else if(data.r == 5){
	                        popError("MD5签名不正确!");
	                    } else if(data.r == 6){
	                        popError("MD5签名不正确!");
	                    } else if(data.r == 501){
	                        popError("输入密码错误1次!");
	                    }else if(data.r == 502){
	                        popError("输入密码错误2次!");
	                    }else if(data.r == 503){
	                        popError("输入密码错误3次或3次以上，请您1小时后再试!");
	                    }
	                });
	            }
		});
	});

	
