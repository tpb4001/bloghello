		$(".tsite_x3").live("click", function(event) {
			if(event.target.className!="tsite_xsc fe_tsisec" && event.target.className!="tsite_xsp fe_tsisepop"){
			$(".tsite_xsp").hide();  
			}
		});	
		
		$(".tsite_x3a2").live("click",function(){
			/*12-12 update select联动*/
			$(".tsite_xs").removeClass("tsite_xspr");
			$(".tsite_xs").find(".tsite_xsp").hide();
			$(this).find(".tsite_xs2").addClass("tsite_xspr");		
			if($(this).parents(".tsite_x3").find(".tsite_xsc").text()>=0){	
			$(".tsite_x3a2").find("a").show();		
				$(".tsite_xsef").hide();			
				}else{
			$(".tsite_x3a2").find("a").show();
			$(".tsite_xsef2").hide();		
			}
			
			/*12-12 update 判断自定义输入框可用*/
			if($(".tsite_xsc2").text() == "自定义" ){
			$(".tsite_xsc2").attr("id","tsite_lv_21");
					if($(".tsite_xsc2").attr("id")=="tsite_lv_21"){
					$(".tsite_x3by").removeAttr("disabled").removeClass("tsite_x3bz");
					}
				}else{
					$(".tsite_x3by").attr("disabled","disabled").addClass("tsite_x3bz");
					}
			});
			
		/*12-12 update select联动 add*/	
		$(".tsite_x3ap").live("click",function(){
			$(".tsite_xs2").removeClass("tsite_xspr");
				 $(".tsite_xs2").find(".tsite_xsp2").hide();
				$(this).find(".tsite_xs").addClass("tsite_xspr");		
			
			})	
			
		/*12-12update select联动*/
